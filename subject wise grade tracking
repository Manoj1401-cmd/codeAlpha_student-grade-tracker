import java.util.ArrayList;
import java.util.Scanner;

public class GradeTracker {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        ArrayList<Student> students = new ArrayList<>();

        System.out.println("ðŸŽ“ Welcome to Student Grade Tracker");

        while (true) {
            System.out.println("\n1. Add Student\n2. View All Students\n3. Exit");
            System.out.print("Choose an option: ");
            int choice = sc.nextInt();

            switch (choice) {
                case 1:
                    System.out.print("Enter student's name: ");
                    sc.nextLine(); // Consume newline
                    String name = sc.nextLine();
                    int[] marks = new int[5];
                    System.out.println("Enter marks for 5 subjects:");
                    for (int i = 0; i < 5; i++) {
                        marks[i] = sc.nextInt();
                    }
                    students.add(new Student(name, marks));
                    break;
                case 2:
                    if (students.isEmpty()) {
                        System.out.println("No students found.");
                    } else {
                        System.out.println("\nðŸ“‹ Student List:");
                        for (Student s : students) {
                            s.displayInfo();
                        }
                    }
                    break;
                case 3:
                    System.out.println("!Exiting Grade Tracker. Goodbye!");
                    return;
                default:
                    System.out.println("!Invalid choice. Try again.");
            }
        }
    }
}
